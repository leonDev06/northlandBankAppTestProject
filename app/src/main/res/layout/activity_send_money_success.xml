<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:clipToPadding="false"
    tools:context=".ActivityLogin">


    <Button
        android:id="@+id/actSendSuccessBtnPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/global_button"
        android:text="Generate PDF"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/actSendSuccessBtnHome"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actSendSuccesRefNum" />

    <Button
        android:id="@+id/actSendSuccessBtnHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/global_button"
        android:text="Home"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/actSendSuccessBtnPdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/actSendSuccessBtnPdf"
        app:layout_constraintTop_toTopOf="@+id/actSendSuccessBtnPdf"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/amountConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:paddingStart="92dp"
        android:text="1,000"
        app:layout_constraintBottom_toBottomOf="@+id/textView_UserName5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_UserName5" />

    <TextView
        android:id="@+id/textView_UserName5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Amount"
        app:layout_constraintStart_toStartOf="@+id/textView_UserName4"
        app:layout_constraintTop_toBottomOf="@+id/textView_UserName4" />

    <TextView
        android:id="@+id/fullnameConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:paddingStart="92dp"
        android:text="Leonnel Dimatulac"
        app:layout_constraintBottom_toBottomOf="@+id/textView_UserName4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_UserName4" />

    <TextView
        android:id="@+id/textView_UserName4"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/textView_UserName3"
        app:layout_constraintTop_toBottomOf="@+id/textView_UserName3" />

    <ImageView
        android:id="@+id/login_ImageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/success_text" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EEEEE6"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Transaction Successful"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_ImageView" />

    <TextView
        android:id="@+id/sendToConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:paddingStart="92dp"
        android:text="username"
        app:layout_constraintBottom_toBottomOf="@+id/textView_UserName3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_UserName3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_UserName3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="User Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/actSendSuccessDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:paddingStart="92dp"
        android:text="1999-09-06"
        app:layout_constraintBottom_toBottomOf="@+id/textView_UserName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_UserName2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_UserName2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/textView_UserName4"
        app:layout_constraintTop_toBottomOf="@+id/textView_UserName5" />

    <TextView
        android:id="@+id/actSendSuccesRefNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_rounded"
        android:gravity="center_vertical"
        android:paddingStart="92dp"
        android:text="123456789"
        app:layout_constraintBottom_toBottomOf="@+id/textView_UserName6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_UserName6" />

    <TextView
        android:id="@+id/textView_UserName6"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Ref #"
        app:layout_constraintStart_toStartOf="@+id/textView_UserName4"
        app:layout_constraintTop_toBottomOf="@+id/textView_UserName2" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actSendSuccessBtnPdf" />

</androidx.constraintlayout.widget.ConstraintLayout>
